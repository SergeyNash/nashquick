    <script>
        // –ü—Ä–æ–≥—Ä–µ—Å—Å-–±–∞—Ä –ø—Ä–∏ –ø—Ä–æ–∫—Ä—É—Ç–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
        const progressBarFill = document.getElementById('progress-bar-fill');

        window.addEventListener('scroll', () => {
            const scrolled = (window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100;
            progressBarFill.style.width = scrolled + '%';
        });

        // –ì—Ä–∞—Ñ–∏–∫ –Ω–∞–≤—ã–∫–æ–≤ –º–µ–Ω–µ–¥–∂–µ—Ä–∞ –ø—Ä–æ–¥—É–∫—Ç–∞
        const productSkillsCtx = document.getElementById('productSkills').getContext('2d');
        const productSkillsChart = new Chart(productSkillsCtx, {
            type: 'doughnut',
            data: {
                labels: ['–°—Ç—Ä–∞—Ç–µ–≥–∏—è', '–ê–Ω–∞–ª–∏—Ç–∏–∫–∞', '–£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –∫–æ–º–∞–Ω–¥–æ–π', '–†–∞–±–æ—Ç–∞ —Å –∫–ª–∏–µ–Ω—Ç–∞–º–∏'],
                datasets: [{
                    label: '–ù–∞–≤—ã–∫–∏ –º–µ–Ω–µ–¥–∂–µ—Ä–∞ –ø—Ä–æ–¥—É–∫—Ç–∞',
                    data: [80, 70, 90, 85],
                    backgroundColor: ['#ffcc00', '#007bff', '#28a745', '#dc3545'],
                }]
            }
        });

        // –ì—Ä–∞—Ñ–∏–∫ —Ç–µ—Ö–Ω–∏—á–µ—Å–∫–∏—Ö –Ω–∞–≤—ã–∫–æ–≤
        const techSkillsCtx = document.getElementById('techSkills').getContext('2d');
        const techSkillsChart = new Chart(techSkillsCtx, {
            type: 'bar',
            data: {
                labels: ['SQL', 'Python', 'HTML/CSS', 'JavaScript'],
                datasets: [{
                    label: '–¢–µ—Ö–Ω–∏—á–µ—Å–∫–∏–µ –Ω–∞–≤—ã–∫–∏',
                    data: [70, 60, 85, 80],
                    backgroundColor: ['#ffcc00', '#007bff', '#28a745', '#dc3545'],
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // –ì—Ä–∞—Ñ–∏–∫ soft skills
        const softSkillsCtx = document.getElementById('softSkills').getContext('2d');
        const softSkillsChart = new Chart(softSkillsCtx, {
            type: 'radar',
            data: {
                labels: ['–ö–æ–º–º—É–Ω–∏–∫–∞—Ü–∏—è', '–£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –≤—Ä–µ–º–µ–Ω–µ–º', '–ö—Ä–µ–∞—Ç–∏–≤–Ω–æ—Å—Ç—å', '–≠–º–ø–∞—Ç–∏—è'],
                datasets: [{
                    label: 'Soft Skills',
